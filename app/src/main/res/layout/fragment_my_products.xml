<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pages.fragments.MyProducts">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10sp"
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="10sp"
                android:text="My Products"
                android:textColor="?android:textColorPrimary"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAddProduct"
                android:layout_marginHorizontal="10sp"
                android:layout_alignParentEnd="true"
                android:drawableLeft="@drawable/ic_baseline_add_circle_24"
                android:textAllCaps="false"
                android:backgroundTint="@color/greeny"
                android:text="Add New Product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_gravity="center"
        android:layout_marginVertical="100sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary"
        android:text="NO DATA TO SHOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10sp"
        android:backgroundTint="@color/green"
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_margin="10sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:src="@drawable/ic_baseline_email_24"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <Button
                android:id="@+id/btnInviteProducts"
                android:layout_marginHorizontal="10sp"
                android:layout_gravity="center"
                android:background="@drawable/oval"
                android:textAllCaps="false"
                android:text="Invite Your Friends"
                android:layout_width="200sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>