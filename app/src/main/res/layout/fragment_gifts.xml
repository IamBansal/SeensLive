<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".pages.fragments.GiftsFragment">

    <RelativeLayout
        android:layout_marginVertical="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:drawableLeft="@drawable/ic_handshake_blue"
            android:drawablePadding="5sp"
            android:text="Invitations"
            android:textColor="?android:textColorPrimary" />

        <Button
            android:id="@+id/btnGenerateCode"
            android:layout_width="wrap_content"
            android:layout_marginEnd="10sp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableLeft="@drawable/ic_baseline_handshake_24"
            android:text="Genereate New Code"
            android:textAllCaps="false" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="10sp"
        app:cardCornerRadius="10sp"
        android:elevation="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:padding="10sp"
            android:background="@color/primary_dark"
            android:textColor="?android:textColorSecondary"
            android:drawableLeft="@drawable/ic_baseline_handshake_24"
            android:drawablePadding="10sp"
            android:text="Invitations System\nYou have 500 invitations every month"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_gravity="center"
        android:layout_marginVertical="100sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary"
        android:text="NO DATA TO SHOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>