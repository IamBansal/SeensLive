<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".pages.fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="15sp"
            android:drawableLeft="@drawable/ic_baseline_settings_24"
            android:drawablePadding="10sp"
            android:text="Account Settings"
            android:textColor="?android:textColorPrimary" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:elevation="6sp"
            app:cardCornerRadius="10sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25sp"
                    android:layout_marginVertical="20sp"
                    android:text="Email Address"
                    android:textAllCaps="true" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25sp"
                    android:layout_marginBottom="10sp"
                    android:requiresFadingEdge="vertical"
                    app:cardCornerRadius="13sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/hearty"
                        android:orientation="vertical"
                        android:padding="10sp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5sp"
                            android:text="Email Verification Required."
                            android:textColor="?android:textColorSecondary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:drawableLeft="@drawable/ic_baseline_crisis_alert_24"
                            android:drawablePadding="10sp"
                            android:text="Check your email inbox to complete the verification process."
                            android:textColor="?android:textColorSecondary"
                            android:textSize="17sp" />

                        <Button
                            android:id="@+id/btnResendMail"
                            android:layout_width="300sp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/greeny"
                            android:padding="10sp"
                            android:text="Resend Verification Email"
                            android:textAllCaps="false"
                            android:textColor="?android:textColorSecondary"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25sp"
                    android:layout_marginVertical="10sp"
                    android:text="Email Address"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="17sp"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="25sp"
                    android:layout_marginBottom="30sp"
                    android:background="@color/grey"
                    app:cardCornerRadius="5sp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/grey"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp"
                            android:src="@drawable/ic_baseline_person_24" />

                        <EditText
                            android:id="@+id/etEmailSettings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:ems="15"
                            android:fontFamily="@font/poppins"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:padding="10sp"
                            android:textColor="?android:textColorPrimary"
                            android:textColorHint="?android:textColorPrimary" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="25sp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:text="Username"
                    android:textAllCaps="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25sp"
                    android:layout_marginVertical="10sp"
                    android:text="Username"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="17sp"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="25sp"
                    android:layout_marginBottom="10sp"
                    android:background="@color/grey"
                    app:cardCornerRadius="5sp">

                    <EditText
                        android:id="@+id/etUsernameSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:ems="15"
                        android:fontFamily="@font/poppins"
                        android:hint="Username"
                        android:inputType="text"
                        android:autofillHints="username"
                        android:maxLines="1"
                        android:padding="10sp"
                        android:textColor="?android:textColorPrimary"
                        android:textColorHint="?android:textColorPrimary" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25sp"
                    android:layout_marginBottom="20sp"
                    android:text="Can only contain alphanumeric characters (A–Z, 0–9) and periods ('.')" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSaveChangesSettings"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/greeny"
            android:text="Save Changes"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="25sp"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/greeny"
            android:text="Sign Out"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>