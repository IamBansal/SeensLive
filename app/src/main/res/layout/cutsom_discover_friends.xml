<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="7sp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="5sp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civProfileDiscover"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"
            android:src="@drawable/pic" />

        <LinearLayout
            android:layout_toEndOf="@id/civProfileDiscover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameDiscover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kritika Sharma"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMutualDiscover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 mutual friends"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSentDiscover"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="10sp"
            android:text="Sent"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnAddFriendDiscover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_alignParentEnd="true"
            android:text="Add Friend"
            android:textAllCaps="false" />

    </RelativeLayout>

</LinearLayout>